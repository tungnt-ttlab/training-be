{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "dist" }
        },
        {
            "src": "src/main.ts",
            "use": "@vercel/node",
            "config": { "includeFiles": "dist/**" }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/main.ts",
            "methods": [
                "GET",
                "OPTIONS",
                "POST",
                "PUT",
                "PATCH",
                "DELETE",
                "HEAD"
            ]
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": [
                    "GET",
                    "OPTIONS",
                    "POST",
                    "PUT",
                    "PATCH",
                    "DELETE",
                    "HEAD"
                ],
                "Access-Control-Allow-Headers": [
                    "X-CSRF-Token",
                    "X-Requested-With",
                    "Accept",
                    "Accept-Version",
                    "Content-Length",
                    "Content-MD5",
                    "Content-Type",
                    "Date",
                    "X-Api-Version",
                    "Authorization",
                    "Language",
                    "X-Timezone",
                    "X-Timezone-Name"
                ]
            }
        }
    ]
}
